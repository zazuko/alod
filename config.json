{
  "baseConfig": "trifid:config-sparql.json",
  "sparqlEndpointUrl": "https://test.lindas-data.ch:8443/alod/query",
  "sparqlProxy": {
    "options": {
      "queryOperation": "postQueryUrlencoded",
      "authentication": {
        "user": "public",
        "password": "public"
      }
    }
  },
  "staticFiles": {
    "rendererFiles": {
      "path": "/",
      "folder": "renderer:public"
    },
    "dataAlodFiles": {
      "hostname": "data.alod.ch",
      "path": "/",
      "folder": "cwd:public/data"
    },
    "wwwAlodFiles": {
      "path": "/",
      "folder": "cwd:public/www"
    },
    "zackFiles": {
      "path": "/search/",
      "folder":  "cwd:node_modules/zack-search/dist"
    }
  },
  "handler": {
    "options": {
      "authentication": {
        "user": "public",
        "password": "public"
      },
      "resourceExistsQuery": "ASK { <${iri}> ?p ?o }",
     // "resourceGraphQuery": "DESCRIBE <${iri}> FROM <http://data.alod.ch/graph/bs> FROM <http://data.alod.ch/graph/bar> FROM <http://data.alod.ch/graph/ne> FROM <http://data.alod.ch/graph/ge> FROM <http://data.alod.ch/graph/vs> FROM <http://data.alod.ch/graph/isil> FROM <http://data.alod.ch/graph/meta>"
      "resourceGraphQuery": "DESCRIBE <${iri}>"

    }
  },
  "renderer": {
    "module": "trifid-renderer-simple",
    "template": "cwd:views/index.html"
  }
}
